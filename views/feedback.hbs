    <h5 style="text-align: center">The table only shows the details of customer who are  indians</h5>
<div class="container">

    <table>
        <tr>
            <th >ID</th>
            <th >Firstname</th>
            <th >Lastname</th>
            <th >Gnder</th>
            <th >Country</th>
            <th >username</th>
            <th >Email</th>
        </tr>
        {{#each data}}
        <tr>
            <td>{{_id}}</td>
            <td>{{firstname}}</td>
            <td>{{lastname}}</td>
            <td>{{gender}}</td>
            <td>{{Select1}}</td>
            <td>{{username}}</td>
